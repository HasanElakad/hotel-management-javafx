<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import io.github.palexdev.materialfx.controls.MFXButton?>

<AnchorPane
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="com.hotel.management.javafx.controller.DashboardController"
        styleClass="dashboard-root login-bg">

    <children>
        <BorderPane
                AnchorPane.topAnchor="0.0"
                AnchorPane.bottomAnchor="0.0"
                AnchorPane.leftAnchor="0.0"
                AnchorPane.rightAnchor="0.0">

            <!-- LEFT SIDEBAR -->
            <left>
                <VBox spacing="20.0" styleClass="sidebar">
                    <children>

                        <Label
                                text="HotelDesk"
                                styleClass="sidebar-title"/>

                        <VBox spacing="6.0" styleClass="sidebar-menu">
                            <children>
                                <MFXButton
                                        text="Dashboard"
                                        styleClass="sidebar-btn sidebar-btn-active"/>
                                <MFXButton
                                        text="Reservations"
                                        styleClass="sidebar-btn"/>
                            </children>
                        </VBox>

                        <Pane VBox.vgrow="ALWAYS"/>

                        <MFXButton
                                text="Logout"
                                styleClass="sidebar-logout-btn"/>

                        <Label
                                text="Signed in as Admin"
                                styleClass="sidebar-footer"/>

                    </children>
                    <padding>
                        <Insets top="20.0" right="16.0" bottom="20.0" left="20.0"/>
                    </padding>
                </VBox>
            </left>

            <!-- CENTER: ROOMS ONLY -->
            <center>
                <VBox
                        spacing="18.0"
                        styleClass="main-area">
                    <children>

                        <!-- TOP BAR -->
                        <HBox spacing="10.0" styleClass="topbar">
                            <children>
                                <VBox spacing="4.0">
                                    <children>
                                        <Label
                                                text="Dashboard"
                                                styleClass="topbar-title"/>
                                        <Label
                                                text="Today’s overview"
                                                styleClass="topbar-subtitle"/>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>

                        <!-- ROOM GRID -->
                        <VBox alignment="CENTER">
                            <children>

                                <!-- FIRST ROW -->
                                <HBox spacing="18.0" styleClass="card-row">
                                    <children>

                                        <!-- Single -->
                                        <VBox spacing="10.0" styleClass="room-card">
                                            <children>

                                                <Pane
                                                        prefHeight="90.0"
                                                        styleClass="room-hero single-hero"/>

                                                <VBox spacing="4.0">
                                                    <children>
                                                        <Label
                                                                text="Single Room"
                                                                styleClass="room-title"/>
                                                        <Label
                                                                text="1 guest • from $80/night"
                                                                styleClass="room-subtitle"/>
                                                    </children>
                                                </VBox>

                                                <MFXButton
                                                        text="View / Reserve"
                                                        styleClass="room-button"/>

                                            </children>
                                        </VBox>

                                        <!-- Double -->
                                        <VBox spacing="10.0" styleClass="room-card">
                                            <children>

                                                <Pane
                                                        prefHeight="90.0"
                                                        styleClass="room-hero double-hero"/>

                                                <VBox spacing="4.0">
                                                    <children>
                                                        <Label
                                                                text="Double Room"
                                                                styleClass="room-title"/>
                                                        <Label
                                                                text="2 guests • from $120/night"
                                                                styleClass="room-subtitle"/>
                                                    </children>
                                                </VBox>

                                                <MFXButton
                                                        text="View / Reserve"
                                                        styleClass="room-button"/>

                                            </children>
                                        </VBox>

                                    </children>
                                </HBox>

                                <!-- SECOND ROW -->
                                <HBox spacing="18.0" styleClass="card-row">
                                    <children>

                                        <!-- Suite -->
                                        <VBox spacing="10.0" styleClass="room-card">
                                            <children>

                                                <Pane
                                                        prefHeight="90.0"
                                                        styleClass="room-hero suite-hero"/>

                                                <VBox spacing="4.0">
                                                    <children>
                                                        <Label
                                                                text="Suite"
                                                                styleClass="room-title"/>
                                                        <Label
                                                                text="Up to 4 • from $220/night"
                                                                styleClass="room-subtitle"/>
                                                    </children>
                                                </VBox>

                                                <MFXButton
                                                        text="View / Reserve"
                                                        styleClass="room-button"/>

                                            </children>
                                        </VBox>

                                        <!-- Family -->
                                        <VBox spacing="10.0" styleClass="room-card">
                                            <children>

                                                <Pane
                                                        prefHeight="90.0"
                                                        styleClass="room-hero family-hero"/>

                                                <VBox spacing="4.0">
                                                    <children>
                                                        <Label
                                                                text="Family Room"
                                                                styleClass="room-title"/>
                                                        <Label
                                                                text="Up to 4 • from $180/night"
                                                                styleClass="room-subtitle"/>
                                                    </children>
                                                </VBox>

                                                <MFXButton
                                                        text="View / Reserve"
                                                        styleClass="room-button"/>

                                            </children>
                                        </VBox>

                                    </children>
                                </HBox>

                            </children>
                        </VBox>

                    </children>
                    <!-- push cards a bit to the right -->
                    <padding>
                        <Insets top="18.0" right="24.0" bottom="24.0" left="40.0"/>
                    </padding>
                </VBox>
            </center>

        </BorderPane>
    </children>
</AnchorPane>