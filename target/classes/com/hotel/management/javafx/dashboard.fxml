<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<?import io.github.palexdev.materialfx.controls.MFXButton?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            styleClass="dashboard-root login-bg">


    <children>
        <BorderPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                    AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

            <!-- LEFT SIDEBAR -->
            <left>
                <VBox spacing="20" styleClass="sidebar">
                    <children>
                        <Label text="HotelDesk" styleClass="sidebar-title"/>

                        <VBox spacing="8" styleClass="sidebar-menu">
                            <children>
                                <Label text="Dashboard" styleClass="sidebar-item sidebar-item-active"/>
                                <Label text="Reservations" styleClass="sidebar-item"/>
                            </children>
                        </VBox>

                        <Pane VBox.vgrow="ALWAYS"/>

                        <Label text="Signed in as Reception"
                               styleClass="sidebar-footer"/>
                    </children>

                    <padding>
                        <Insets top="20" right="16" bottom="20" left="20"/>
                    </padding>
                </VBox>
            </left>

            <!-- MAIN CONTENT -->
            <center>
                <VBox spacing="18" styleClass="main-area">
                    <children>

                        <!-- TOP BAR WITHOUT BUTTON -->
                        <HBox spacing="10" styleClass="topbar">
                            <children>
                                <VBox spacing="4">
                                    <children>
                                        <Label text="Dashboard" styleClass="topbar-title"/>
                                        <Label text="Today’s overview" styleClass="topbar-subtitle"/>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>

                        <!-- ROOM GRID -->
                        <VBox alignment="CENTER">
                            <children>
                                <HBox spacing="18" styleClass="card-row">
                                    <children>
                                        <!-- Single -->
                                        <VBox spacing="10" styleClass="room-card single-card">
                                            <children>
                                                <Pane prefHeight="90"
                                                      styleClass="room-hero single-hero"/>
                                                <VBox spacing="4">
                                                    <children>
                                                        <Label text="Single Room" styleClass="room-title"/>
                                                        <Label text="1 guest • from $80/night"
                                                               styleClass="room-subtitle"/>
                                                    </children>
                                                </VBox>
                                                <MFXButton text="View / Reserve"
                                                           styleClass="room-button"/>
                                            </children>
                                        </VBox>

                                        <!-- Double -->
                                        <VBox spacing="10" styleClass="room-card double-card">
                                            <children>
                                                <Pane prefHeight="90"
                                                      styleClass="room-hero double-hero"/>
                                                <VBox spacing="4">
                                                    <children>
                                                        <Label text="Double Room" styleClass="room-title"/>
                                                        <Label text="2 guests • from $120/night"
                                                               styleClass="room-subtitle"/>
                                                    </children>
                                                </VBox>
                                                <MFXButton text="View / Reserve"
                                                           styleClass="room-button"/>
                                            </children>
                                        </VBox>
                                    </children>
                                </HBox>

                                <HBox spacing="18" styleClass="card-row">
                                    <children>
                                        <!-- Suite -->
                                        <VBox spacing="10" styleClass="room-card suite-card">
                                            <children>
                                                <Pane prefHeight="90"
                                                      styleClass="room-hero suite-hero"/>
                                                <VBox spacing="4">
                                                    <children>
                                                        <Label text="Suite" styleClass="room-title"/>
                                                        <Label text="Up to 4 • from $220/night"
                                                               styleClass="room-subtitle"/>
                                                    </children>
                                                </VBox>
                                                <MFXButton text="View / Reserve"
                                                           styleClass="room-button"/>
                                            </children>
                                        </VBox>

                                        <!-- Family -->
                                        <VBox spacing="10" styleClass="room-card family-card">
                                            <children>
                                                <Pane prefHeight="90"
                                                      styleClass="room-hero family-hero"/>
                                                <VBox spacing="4">
                                                    <children>
                                                        <Label text="Family Room" styleClass="room-title"/>
                                                        <Label text="Up to 4 • from $180/night"
                                                               styleClass="room-subtitle"/>
                                                    </children>
                                                </VBox>
                                                <MFXButton text="View / Reserve"
                                                           styleClass="room-button"/>
                                            </children>
                                        </VBox>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>

                    </children>

                    <padding>
                        <Insets top="18" right="24" bottom="24" left="0"/>
                    </padding>
                </VBox>
            </center>

        </BorderPane>
    </children>
</AnchorPane>
